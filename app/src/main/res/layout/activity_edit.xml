<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_user_image"
        android:layout_width="125dp"
        android:layout_height="109dp"
android:src="@mipmap/ic_launcher"
        android:layout_marginTop="64dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:id="@+id/edit_editText_name"
        android:layout_width="352dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="name"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_changeimage_textview" />

    <EditText
        android:id="@+id/edit_editText_desc"
        android:layout_width="354dp"
        android:layout_height="119dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_editText_name" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="146dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/square_backround"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_editText_desc" />

    <TextView
        android:id="@+id/edit_changeimage_textview"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="197dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="155dp"
        android:gravity="center"
        android:text="Change Image"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_user_image" />
</androidx.constraintlayout.widget.ConstraintLayout>